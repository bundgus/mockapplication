<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>MockApplication</display-name>
    <filter>
        <filter-name>MockJPGImageFilter</filter-name>
        <filter-class>com.bundgus.mockapplication.filter.MockImageFilter</filter-class>
        <init-param>
            <param-name>ImageName</param-name>
            <param-value>image1.jpg</param-value>
        </init-param>
        </filter>
    <filter>
        <filter-name>MockFilter</filter-name>
        <filter-class>com.bundgus.mockapplication.filter.MockFilter</filter-class>
    </filter>
    <filter>
        <filter-name>MockGIFImageFilter</filter-name>
        <filter-class>com.bundgus.mockapplication.filter.MockImageFilter</filter-class>
        <init-param>
            <param-name>ImageName</param-name>
            <param-value>image1.gif</param-value>
        </init-param>
        </filter>
    <filter>
        <filter-name>MockPNGImageFilter</filter-name>
        <filter-class>com.bundgus.mockapplication.filter.MockImageFilter</filter-class>
        <init-param>
            <param-name>ImageName</param-name>
            <param-value>image1.png</param-value>
        </init-param>
        </filter>
    <filter-mapping>
        <filter-name>MockJPGImageFilter</filter-name>
        <url-pattern>*.jpg</url-pattern>
    </filter-mapping>
        <filter-mapping>
        <filter-name>MockGIFImageFilter</filter-name>
        <url-pattern>*.gif</url-pattern>
    </filter-mapping>
        <filter-mapping>
        <filter-name>MockPNGImageFilter</filter-name>
        <url-pattern>*.png</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MockFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>MockServlet</servlet-name>
        <servlet-class>com.bundgus.mockapplication.servlet.MockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MockServlet</servlet-name>
        <url-pattern>/MockServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
	<welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
